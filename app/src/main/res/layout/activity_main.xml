<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5sp"
    android:background="#0a6c03">

    <!-- The deck of cards in the middle -->

    <LinearLayout
        android:id="@+id/Scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playerPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player Score:" />

        <TextView
            android:id="@+id/opponentPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Opponent Score:" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/opponent_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opponent_card1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card4"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card5"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card6"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card7"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

    </LinearLayout>

    <!-- The player's hand at the bottom -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deck"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center|center_horizontal"
            android:paddingTop="10sp"
            android:src="@drawable/cardback" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/askButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Ask" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:drawable/btn_dropdown" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="TextView" />

        <LinearLayout
            android:id="@+id/TheEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/endGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="End Game" />
        </LinearLayout>
    </LinearLayout>

    <!-- The opponent's hand at the top -->
</LinearLayout>