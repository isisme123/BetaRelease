<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5sp"
    android:background="#0a6c03">

    <!-- The deck of cards in the middle -->
    <LinearLayout
        android:id="@+id/opponent_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opponent_card1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card4"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card5"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card6"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card7"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

    </LinearLayout>

    <!-- The player's hand at the bottom -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deck"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center|center_horizontal"
            android:paddingTop="10sp"
            android:src="@drawable/cardback" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_card1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/player_card2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/player_card3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/player_card4"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/player_card5"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/player_card6"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/player_card7"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

    </LinearLayout>

    <!-- The opponent's hand at the top -->
</LinearLayout>