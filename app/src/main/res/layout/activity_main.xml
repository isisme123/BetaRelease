<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    android:paddingTop="5sp">

    <!-- The deck of cards in the middle -->

    <LinearLayout
        android:id="@+id/Scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playerPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player Score:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/opponentPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Opponent Score:"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/opponent_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opponent_card1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card4"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card5"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card6"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

        <ImageView
            android:id="@+id/opponent_card7"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/cardback" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/WhatIsAsked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cardAsked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:text="AI asks:"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- The player's hand at the bottom -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deck"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center|center_horizontal"
            android:paddingTop="10sp"
            android:src="@drawable/cardback" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/askButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Ask" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:drawable/btn_dropdown" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Human Hand "
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="0"
            android:text="Reset Game" />

        <Button
            android:id="@+id/endGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="100dp"
            android:layout_weight="0"
            android:text="End Game" />

    </LinearLayout>

    <!-- The opponent's hand at the top -->
</LinearLayout>